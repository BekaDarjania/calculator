<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/background"

        tools:context=".MainActivity">


    <TextView
            android:text="0"
            android:layout_width="357dp"
            android:layout_height="64dp"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:background="@color/colorAccent"

            android:padding="10dp"

            android:textAlignment="viewEnd" android:textSize="30sp" android:fontFamily="sans-serif-smallcaps"/>
    <TableLayout
            android:layout_width="350dp"
            android:layout_height="397dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:orientation="horizontal"
            android:gravity="top|center" app:layout_constraintVertical_bias="0.26">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button7" android:textSize="24sp"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button8" android:textSize="24sp"/>
            <Button
                    android:text=" 9"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button9" android:textSize="24sp"/>
            <Button
                    android:text="clear"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/clear" android:textSize="14sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button4" android:textSize="24sp"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button5" android:textSize="24sp"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button6" android:textSize="24sp"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/minus" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button1" android:textSize="24sp"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button2" android:textSize="24sp"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button3" android:textSize="24sp"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/plus" android:textSize="24sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/divide" android:textSize="24sp"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/multiply" android:textSize="24sp"/>
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/button0" android:textSize="24sp"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="79dp" tools:layout_editor_absoluteY="90dp"
                    tools:layout_editor_absoluteX="39dp" android:id="@+id/result" android:textSize="24sp"
                    android:background="@color/colorAccent"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>